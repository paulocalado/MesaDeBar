<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/txtNomeProdutoDetalhe"
        android:textSize="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="17dp"
        android:text="TextView"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:id="@+id/txtPrecoDetalhe"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="TextView"
        android:layout_marginLeft="12dp"
        android:layout_marginStart="12dp"
        android:layout_below="@+id/txtNomeProdutoDetalhe"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/txtQuantidadeProdutoDetalhe"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView"
        android:layout_below="@+id/txtPrecoDetalhe"
        android:layout_alignLeft="@+id/txtPrecoDetalhe"
        android:layout_alignStart="@+id/txtPrecoDetalhe"
        android:layout_marginTop="16dp" />

    <TextView
        android:id="@+id/txtDeletarProduto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView"
        android:textColor="#aa1919"
        android:layout_alignBaseline="@+id/txtAlterarProduto"
        android:layout_alignBottom="@+id/txtAlterarProduto"
        android:layout_alignLeft="@+id/editQtdAlteraProduto"
        android:layout_alignStart="@+id/editQtdAlteraProduto" />

    <android.support.design.widget.TextInputLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/editQtdAlteraProduto"
        android:layout_below="@+id/txtQuantidadeProdutoDetalhe"
        android:layout_alignLeft="@+id/txtQuantidadeProdutoDetalhe"
        android:layout_alignStart="@+id/txtQuantidadeProdutoDetalhe"
        android:layout_marginTop="43dp"
        android:layout_toStartOf="@+id/txtAlterarProduto"
        android:layout_toLeftOf="@+id/txtAlterarProduto">

        <EditText
            android:id="@+id/editText4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/txtQuantidadeProdutoDetalhe"
            android:layout_alignStart="@+id/txtQuantidadeProdutoDetalhe"
            android:layout_below="@+id/txtQuantidadeProdutoDetalhe"
            android:layout_marginTop="37dp"
            android:hint="@string/hint_edit_update_produto" />
    </android.support.design.widget.TextInputLayout>

    <TextView
        android:id="@+id/txtAlterarProduto"
        android:textColor="#3f9121"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginEnd="36dp"
        android:layout_marginRight="36dp"
        android:text="TextView" />

</RelativeLayout>
