<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.codgin.paulo.mesadebar.Fragments.ListaPessoaFragment">

    <!-- TODO: Update blank fragment layout -->

    <Button
        android:id="@+id/btnAdicionarPessoa"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentStart="true"
        android:text="@string/btn_adicionar_pessoa" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/rvListaPessoa"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_above="@+id/btnAdicionarPessoa" />

</RelativeLayout>
