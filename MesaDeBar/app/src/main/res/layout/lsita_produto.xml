<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <android.support.v7.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:paddingTop="15dp"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:id="@+id/cardListaProduto"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            >


            <TextView
                android:id="@+id/txtNomeProduto"
                android:textSize="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="13dp"
                android:layout_marginStart="13dp"
                android:text="TextView" />

            <TextView
                android:id="@+id/txtPrecoProduto"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="TextView"
                android:layout_alignParentBottom="true"
                android:layout_alignLeft="@+id/txtNomeProduto"
                android:layout_alignStart="@+id/txtNomeProduto" />

            <TextView
                android:id="@+id/txtQuantidadeProduto"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="TextView"
                android:layout_marginLeft="12dp"
                android:layout_marginStart="12dp"
                android:layout_alignParentBottom="true"
                android:layout_toRightOf="@+id/txtPrecoProduto"
                android:layout_toEndOf="@+id/txtPrecoProduto" />
        </RelativeLayout>

    </android.support.v7.widget.CardView>

</RelativeLayout>
